@model CMMS.Models.MachineModel
@using CMMS.Models

@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
    Sparepart _sparepart = new Sparepart();
    List<SparepartModel> spareparts = _sparepart.getAll_sparepartMachine(Model.no_asset);
    List<SparepartModel> spareparts_non = _sparepart.getAll_sparepartMachineExcept(Model.no_asset);
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("KepalaMaintenance", "Dashboard")">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("MachineView", "Machine")">Machine</a></li>
        <li class="breadcrumb-item active" aria-current="page">Detail Machine</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Detail", "Machine", new { id = Model.no_asset })">Detail</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Sparepart", "Machine", new { id = Model.no_asset })">Sparepart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("History", "Machine", new { id = Model.no_asset })">History</a>
                    </li>
                </ul>

                <div class="container">
                    <h4 class="mt-4">Machine Sparepart</h4>
                    <button type="button" class="btn btn-primary my-2" data-toggle="modal" data-target="#firstModalCenter">
                        Add Sparepart Machine
                    </button>
                    <!-- Modal -->
                    <div class="modal fade" id="firstModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-md" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Form Sparepart</h5>
                                    <button type="button" class="close" onclick="closemodal(this.value)" value="#firstModalCenter" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                @using (Html.BeginForm("ActionCreateSparepart", "Machine", FormMethod.Post))
                                {
                                    <div class="modal-body">
                                        <div class="form-group row">
                                            <div class="form-group col-12">
                                                <label class="col-form-label">Machine</label>
                                                <input type="hidden" name="id_machine" id="id_machine" value=@Model.no_asset />
                                                <input type="hidden" name="id_sparepart" id="id_sparepart" />
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend text-center">
                                                        <span class="input-group-text icon-align-justify" style="width: 48px;"><i class="fa fa-user"></i></span>
                                                    </div>
                                                    <input type="text" name="name_sparepart" id="name_sparepart" class="form-control" readonly />
                                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#secondModalCenter">
                                                        Select Sparepart
                                                    </button>
                                                    <div class="modal fade" id="secondModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title" id="exampleModalLongTitle">List Machine</h5>
                                                                    <button type="button" class="close" onclick="closemodal(this.value)" value="#secondModalCenter" aria-label="Close">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <div class="container">
                                                                        <div class="table-responsive my-3">
                                                                            <table id="dataTableExample" class="table table-sm ">
                                                                                <thead class="thead-light">
                                                                                    <tr class="text-center">
                                                                                        <th scope="col" style="width:10px;">#</th>
                                                                                        <th scope="col">Name</th>
                                                                                        <th scope="col">Function</th>
                                                                                        <th scope="col">Unit</th>
                                                                                        <th scope="col" style="width: 100px;">Action</th>
                                                                                    </tr>
                                                                                </thead>
                                                                                <tbody style="vertical-align:middle">
                                                                                    @{ int i = 0;}
                                                                                    @foreach (var item in spareparts_non)
                                                                                    {
                                                                                        i++;
                                                                                        <tr>
                                                                                            <th scope="row" class="text-center">@i</th>
                                                                                            <td>@item.name</td>
                                                                                            <td>@item.function</td>
                                                                                            <td>@item.unit</td>
                                                                                            <td class="text-center">
                                                                                                <button type="button" onclick="sendvalue(this.value)" class="btn btn-success" style="width:80px;height:35px;" value="@item.id-@item.name-#secondModalCenter">Select</button>
                                                                                            </td>
                                                                                        </tr>
                                                                                    }
                                                                                </tbody>
                                                                            </table>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group col-12">
                                                <label class="col-form-label">Quantity</label>
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend text-center">
                                                        <span class="input-group-text icon-align-justify" style="width: 48px;"><i class="fa fa-user"></i></span>
                                                    </div>
                                                    <input type="number" name="quantity" id="quantity" class="form-control" min="1" value="1" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" onclick="closemodal(this.value)" value="#firstModalCenter">Close</button>
                                        <input type="submit" value="Add" class="btn btn-primary" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <ul class="list-group mt-3">
                        @foreach (var item in spareparts)
                        {
                            List<string> photos = _sparepart.getAll_photoPart(item.id);

                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-3">
                                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                            <div class="carousel-inner">
                                                @for (int i = 0; i < photos.Count(); i++)
                                                {
                                                    if (i == 0)
                                                    {
                                                        <div class="carousel-item active">
                                                            <img src="~/Uploads/Sparepart/@photos[i].ToString()" style="border-radius:0%; width:200px;height:200px;" class="d-block w-100" alt="...">
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="carousel-item">
                                                            <img src="~/Uploads/Sparepart/@photos[i].ToString()" style="border-radius:0%; width:200px;height:200px;" class="d-block w-100" alt="...">
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-9">
                                        <input type="hidden" name="id" value="">
                                        <div class="form-group row">
                                            <label class="col-sm-2 "><b>Sparepart</b></label>
                                            <div class="col-sm-10">
                                                @item.name
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-sm-2 "><b>Quantity</b></label>
                                            <div class="col-sm-10">
                                                @item.quantity / @item.unit
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label><b>Function</b></label>
                                            <div>
                                                <p>@item.function</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            <hr />
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        function closemodal(value) {
            $(value).modal('hide');
        }
        function sendvalue(value) {
            var explode = value.split("-");
            document.getElementById("id_sparepart").value = explode[0];
            document.getElementById("name_sparepart").value = explode[1];
            $(explode[2]).modal('hide');
        }
    </script>
