<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manajemen Informatika</title>
    @Styles.Render("~/Content/css")
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body>
    @RenderBody()
    @Scripts.Render("~/Content/js")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    if ("@TempData["SuccessMessage"]" != "") {
        swal.fire("Login Succeed", "@TempData["SuccessMessage"]", "success").then((value) => {
            window.location = "/Dashboard/"+"@TempData["Direct"]";
        });
    }

    if ("@TempData["ErrorMessage"]" != "") {
        swal.fire("Login Failed",  "@TempData["ErrorMessage"]", "error").then((value) => {
        });
    }
</script>
