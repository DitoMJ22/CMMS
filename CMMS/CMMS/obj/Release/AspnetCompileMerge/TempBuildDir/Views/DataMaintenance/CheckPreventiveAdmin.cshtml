@model IEnumerable<CMMS.Models.MaintenancePreventiveModel>
@using CMMS.Models

@{
    Layout = "~/Views/shared/LayoutPage.cshtml";
    Preventive _workorder = new Preventive();

}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Work Order</a></li>
        <li class="breadcrumb-item active" aria-current="page">Preventive</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Work Order Preventive</h6>
                <div class="table-responsive my-3">
                    <table id="dataTableExample" class="table table-sm ">
                        <thead class="thead-light">
                            <tr class="text-center">
                                <th scope="col" class="text-left" style="width:35px;">#</th>
                                <th scope="col">No. Work Order</th>
                                <th scope="col">Request Date</th>
                                <th scope="col">Status</th>
                                <th scope="col" style="width: 100px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0;}
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr>
                                    <th scope="row" class="text-center">@i</th>
                                    <td>@item.id_wop</td>
                                    @{ string date = ""; if (item.schedule_date != "01-01-1753") { date = item.schedule_date; } }
                                    <td>@date</td>
                                    <td>@item.status</td>
                                    <td>
                                        <a href="@Url.Action("DetailCheckPreventiveAdmin", "DataMaintenance", new { id = _workorder.getWorkOrderID(item.id_wop) })" class="btn btn-info text-white" style="width:50px;height:35px;" data-toggle="tooltip" data-placement="top" title="Detail">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function closemodal(value) {
        $(value).modal('hide');
    }

    function getdetail(value) {

    }
</script>