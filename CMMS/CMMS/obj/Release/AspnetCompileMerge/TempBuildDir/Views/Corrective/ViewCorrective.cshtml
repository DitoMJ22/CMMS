@model IEnumerable<CMMS.Models.CorrectiveModel>
    @using CMMS.Models

    @{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
    Corrective _workorder = new Corrective();

    }

    <nav class="page-breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action(" PICMaintenanceUPT", "Dashboard" )">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action(" ViewCorrective", "Corrective" )">WorkOrder</a></li>
            <li class="breadcrumb-item active" aria-current="page">Corrective</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h6 class="card-title">Work Order Corrective</h6>
                    <a href="@Url.Action(" CreateCorrective", "Corrective" )" class="btn btn-info text-light" style="width:160px;height:35px;"><i class="fa fa-plus"></i> Add Work Order</a>
                    <div class="table-responsive my-3">
                        <table id="dataTableExample" class="table table-sm ">
                            <thead class="thead-light">
                                <tr class="text-center">
                                    <th scope="col" class="text-left" style="width:35px;">#</th>
                                    <th scope="col">No. Work Order</th>
                                    <th scope="col">Request Date</th>
                                    <th scope="col">Status</th>
                                    <th scope="col" style="width: 100px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int i = 0;}
                                @foreach (var item in Model)
                                {
                                i++;
                                <tr>
                                    <th scope="row" class="text-center">@i</th>
                                    <td>@item.id_woc</td>
                                    @{ string date = ""; if (item.request_date != "01-01-1753") { date = item.request_date; } }
                                    <td>@date</td>
                                    <td>@item.status</td>
                                    @if (item.status == "Draft")
                                    {
                                    <td>
                                        <a href="@Url.Action(" SendCorrective", "Corrective" , new { id=_workorder.getWorkOrderID(item.id_woc) })" class="btn btn-success" style="width:50px;height:35px;" data-toggle="tooltip" data-placement="top" title="Send">
                                            <i class="fa fa-paper-plane"></i>
                                        </a>
                                        <a href="@Url.Action(" UpdateCorrective", "Corrective" , new { id=_workorder.getWorkOrderID(item.id_woc) })" class="btn btn-secondary" style="width:50px;height:35px;" data-toggle="tooltip" data-placement="top" title="Update">
                                            <i class="fa fa-pencil-square-o"></i>
                                        </a>
                                        <a href="@Url.Action(" DeleteCorrective", "Corrective" , new { id=_workorder.getWorkOrderID(item.id_woc) })" class="btn btn-danger" style="width:50px;height:35px;" data-toggle="tooltip" data-placement="top" title="Delete">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </td>
                                    }
                                    else
                                    {
                                    <td>
                                        <a href="@Url.Action(" DetailCorrective", "Corrective" , new { id=_workorder.getWorkOrderID(item.id_woc) })" class="btn btn-info text-white" style="width:50px;height:35px;" data-toggle="tooltip" data-placement="top" title="Detail">
                                            <i class="fa fa-info-circle"></i>
                                        </a>
                                    </td>
                                    }
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

